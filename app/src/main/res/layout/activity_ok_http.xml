<!-- ScrollView该布局可以使屏幕上下滑动 -->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context="com.mongo.fm.ui.activity.OkHttpActivity">

    <Button
        android:id="@+id/btn_okhttp_get"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="okhttp_get"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/btn_okhttp_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="okhttp_post"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/btn_utils_get"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="utils_get"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/btn_utils_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="utils_post"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/btn_utils_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="utils_down"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/btn_utils_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="utils_upload"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/btn_utils_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="utils_image"
        android:layout_marginBottom="10dp"
        />

    <ProgressBar
        android:id="@+id/pb_progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:progressBarStyleHorizontal"
        />

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_data"
        android:text="响应内容"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>

</ScrollView>